<script type="text/javascript">

var inMenu = false;
var globalHead = null;

function checkSearch() { var searchTerm = document.getElementById('r').value; if (searchTerm == '' || searchTerm == ' Search')  { alert('Please enter a search term.'); return false; } return true; }
function doSearchDropDown() { inMenu = true; getGlobalHeadMenu().style.display = 'block';}
function setInMenu() { inMenu = true; }

function getGlobalHeadMenu()
{
	if (! this.globalHead )
		this.globalHead = document.getElementById('globalheader_menu');
	return this.globalHead;
}
function hideSearchDropDown() { if (!inMenu) getGlobalHeadMenu().style.display = 'none'; }
function leaveMenu() { inMenu = false; setTimeout("hideSearchDropDown()", 1500); }

function setSearchHeader(sender) 
{
	var s = sender.innerHTML;
	var a = sender.attributes["action"];
	var r = sender.attributes["mainargumentname"]
	var n = sender.attributes["additionalargumentname"];
	var m = sender.attributes["additionalargumentvalue"];
	var text = document.getElementById('searchHeaderMainItem');
	if (navigator.appName == 'Microsoft Internet Explorer')
	{ // Internet Explorer removes the menu contents if we change the innerHTML of the list item, so use the inner span tag
		text = document.getElementById('searchHeaderMainItem_Text');
	}
	text.innerHTML = s;
	if (a) document.getElementById('globalheader_searchform').action = a.value; else document.getElementById('globalheader_searchform').action = 'https://web.archive.org/web/20100707130722/http://it.toolbox.com/home/search/';
	if (r) document.getElementById('r').name = r.value; else document.getElementById('r').name = 'r';
	if (n) document.getElementById('searchHeader_m').name = n.value; else document.getElementById('searchHeader_m').name = '';
	if (m) document.getElementById('searchHeader_m').value = m.value; else document.getElementById('searchHeader_m').value = '';
	inMenu = false;
	hideSearchDropDown();
}

</script>


