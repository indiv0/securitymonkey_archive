            <script type="text/javascript">

                // see which one to show...
                var YAMLoff = false;
                $().ready(function () {

                    var $set = $('.umightlike > div[data-localid]');
                    var blogEntryCookie = getCookie("lstblogviewed");
                    if (blogEntryCookie)
                        $set = $set.filter('[data-localid !=' + blogEntryCookie + ']');

                    // now that we've picked, set this blog entry to the lstblogviewed
                    setCookie('lstblogviewed', '4680', 3);

                    // if we have something to show... set the inner div to visible.
                    if ($set.first().length == 1) {                        
                        $set.first().removeClass('displaynone');

                        var $slider = $('.umightlike');
                        var sliderstate = 'hidden';
                        // watch for scroll
                        $(window).scroll(function () {
                            if (YAMLoff) // bail if they closed it.
                                return;

                            // detect the scroll, show the item.
                            var pos = $('.blog-content').first().position();
                            if (pos.top + $('.blog-content').first().height() < $(window).height() + $(window).scrollTop()) {
                                if (sliderstate == 'hidden') {
                                    sliderstate ='shown';
                                    $slider.animate({ right: 0 }, 'fast');
                                }
                            }
                            else // time to hide it?
                            {
                                if (sliderstate != 'hidden') {
                                    sliderstate = 'hidden';
                                    $slider.animate({ right: -500 }, 'fast');
                                }
                            }
                        });

                        // note when they've closed it.
                        $('#YMALclosebox').click(function () {
                            YAMLoff = true;
                            $('.umightlike').fadeOut('fast');
                        });
                    }
                });


                

            </script>
        



