<script language="javascript" type="text/javascript">
    function showHideMore(){
		var element;
		element = document.getElementById("lessVersion")
		element.style.display = (element.style.display == "none") ? "block" : "none";
		element.style.visible = (element.style.visible == "false") ? "true" : "false";
		element = document.getElementById("moreVersion")
		element.style.display = (element.style.display == "none") ? "block" : "none";
		element.style.visible = (element.style.visible == "false") ? "true" : "false";
	}
</script>



